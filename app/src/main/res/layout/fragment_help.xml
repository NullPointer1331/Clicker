<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".HelpFragment">

    <TextView
        android:id="@+id/helpTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="How To Play"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/helpView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="This is a fairly barebones clicker game. You gain points by clicking on the big button on the home screen, and you spend those points on the shop screen. There you can buy upgrades that will get you more points. The store is scrollable, so you can click and drag to see more items."
        android:textSize="20sp" />
</LinearLayout>